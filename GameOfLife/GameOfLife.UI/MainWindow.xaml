<Window x:Class="GameOfLife.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1000">
    <Grid Margin="10 10 10 10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="800" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TextBlock Text="Conway's Game of Life:" FontWeight="Bold" />
            <TextBlock Text="Well, kind of." />
        </StackPanel>
        <Grid Grid.Column="1" Background="#eee">
            <Image />
        </Grid>
    </Grid>
</Window>